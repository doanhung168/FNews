<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PrimaryButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/st_primary_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppBoldTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppMediumTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppLargeTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="ProfileCardStyleLeft">
        <item name="cardElevation">12dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="ProfileCardStyleRight">
        <item name="cardElevation">12dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">12dp</item>
    </style>

    <style name="ContentProfileCardStyle" parent="Widget.AppCompat.TextView">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TitleToolbarStyle" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/balsamiq_sans</item>
    </style>

    <style name="ToolbarStyle">
        <item name="titleTextAppearance">@style/TitleToolbarStyle</item>
        <item name="titleCentered">true</item>
        <item name="titleTextColor">@color/white</item>
        <item name="navigationIcon">@drawable/ic_back</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/primary</item>
    </style>

    <style name="AppSmallTextView">
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="AppPasswordEdittext">
        <item name="android:singleLine">true</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="SheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>

    <style name="AppErrorTextView" parent="AppSmallTextView">
        <item name="android:singleLine">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/error_color</item>
    </style>

</resources>